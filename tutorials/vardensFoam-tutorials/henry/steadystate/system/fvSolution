FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      fvSolution;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

solvers
{
    "theta|h"
    {
        solver          PCG;
        preconditioner  DIC;
        tolerance       1e-12;
        relTol          0;
    }

   
    C
    {
        solver          PBiCG;
        preconditioner  DILU;
        tolerance       1e-12;
        relTol          0;
    }
}   

Picard
{
    toleranceH 1e-9;
    toleranceC 1e-9;
    maxIter 100; // 10 by default
    minIter 3; // 3 by default 
    nIterStability  5; // 5 by default
}

